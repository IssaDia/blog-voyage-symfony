{% block body %}


	<a type="button" onclick="history.back()">&larr; return to Blog</a>


	<section class="get-in-touch">
		<h1 class="title">Connexion</h1>
		<form action='{{path('signIn')}}' method='post'>
			<div class='form-group'>
				<input placeholder='Email...' required name='_username' type='text' class='form-control'>
			</div>
			<div class='form-group'>
				<input placeholder='Password...' required name='_password' type='password' class='form-control'>
			</div>
			<div class='form-group'>
				<button type='submit' class='btn btn-success'>Connexion</button>
			</div>
		</form>


	</section>

	{{ include('/blog/footer.html.twig') }}


{% endblock %}
