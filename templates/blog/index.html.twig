

{% extends 'base.html.twig' %}

{% block title %}Destinations{% endblock %}


{% block body %}

 <section>

   {% for article in articles %}

  <article>

    <div class="row Article">
      <div class="col-md-12 text-center">
        <h1>{{article.title}}</h1>
        <p>{{article.category.title}}</p>
      </div>
    </div>

    <div class="row ">
      <div class="col-md-12 text-center article">
        <img src="../../assets/images/{{article.image}}" class="img-fluid"
          alt="Responsive image">
        <p>{{article.content | raw}}
        <a href="{{path('blog_show', {'id':article.id})}}"> Lire la suite</a><p>
        <p class="date">Ecrit le {{article.createdAt | date('d/m/Y')}}
           {{article.createdAt | date('H:i')}}
         </p>
       </div>
      </div>

    <div class="row ">
      <div class="col-md-12 text-center crud">
        <ul>
          <li><a href="{{path('blog_edit', {'id':article.id})}}"><i class="fas fa-edit"></i></a>
          </li>
          <li><a href="{{path('blog_delete', {'id':article.id})}}"><i class="fas fa-trash-alt"></i></a>
          </li>
        </ul>
      </div>
    </div>



  </article>

    {% endfor %}

 </section>

{% endblock %}
